<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Test3.XAMLLayout.EventLayoutChanged.LayoutUpdatedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test3.XAMLLayout.EventLayoutChanged"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="RootGrid"
            Grid.Column="0"
            Background="LightGray"
            LayoutUpdated="RootGrid_LayoutUpdated">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock
                    x:Name="LayoutUpdatedText"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    TextWrapping="WrapWholeWords" />
                <Rectangle
                    x:Name="MyRect"
                    Width="100"
                    Height="100"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Fill="Red" />
                <Button
                    x:Name="ResizeButton"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="ResizeButton_Click"
                    Content="Tăng kích thước hình vuông" />
                <TextBlock
                    x:Name="SizeInfoTextBlock"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    TextWrapping="WrapWholeWords" />
            </StackPanel>
        </Grid>
        <Border
            Grid.Column="1"
            Margin="12,0,0,0"
            Padding="8"
            BorderBrush="Gray"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="XAML Example" />
                    <Button
                        x:Name="CopyButton"
                        Margin="8,0,0,0"
                        HorizontalAlignment="Right"
                        Click="CopyButton_Click"
                        Content="Copy" />
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <RichTextBlock
                        x:Name="CodeBlock"
                        FontFamily="Consolas"
                        FontSize="12"
                        IsTextSelectionEnabled="True" />
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>
