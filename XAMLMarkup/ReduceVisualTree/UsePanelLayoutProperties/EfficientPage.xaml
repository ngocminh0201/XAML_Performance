<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Test3.XAMLMarkup.ReduceVisualTree.UsePanelLayoutProperties.EfficientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test3.XAMLMarkup.ReduceVisualTree.UsePanelLayoutProperties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--  Show the XAML snippet as literal, copyable text inside a framed TextBox  -->
    <Grid>
        <StackPanel
            Width="520"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="8">
            <Grid
                Width="360"
                Height="360"
                Background="Black" />
            <TextBlock
                FontSize="16"
                Foreground="White"
                Text="XAML snippet (select and copy):" />

            <Border
                Padding="8"
                Background="#FF1E1E1E"
                BorderBrush="#FF444444"
                BorderThickness="1">
                <TextBox
                    AcceptsReturn="True"
                    Background="Transparent"
                    FontFamily="Consolas"
                    FontSize="14"
                    Foreground="LightGreen"
                    IsReadOnly="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Text="&lt;Grid&#x0a;    x:Name=&quot;RootGrid&quot;&#x0a;    Width=&quot;360&quot;&#x0a;    Height=&quot;360&quot;&#x0a;    Background=&quot;Black&quot; /&gt;"
                    TextWrapping="Wrap" />
            </Border>
        </StackPanel>
    </Grid>
</Page>
