<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Test3.XAMLMarkup.ResourceAndResourceDictionary.Definition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test3.XAMLMarkup.ResourceAndResourceDictionary"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <!--  Brushes  -->
            <SolidColorBrush x:Key="AccentBrush" Color="#FF3F42CC" />
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFF6F8FF" />
            <SolidColorBrush x:Key="MutedTextBrush" Color="#FF666666" />

            <!--  Layout  -->
            <Thickness x:Key="CardPadding">12</Thickness>
            <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>

            <!--  Styles  -->
            <Style x:Key="CardBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
                <Setter Property="Padding" Value="{StaticResource CardPadding}" />
                <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}" />
                <Setter Property="Margin" Value="8" />
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Padding" Value="10,6" />
                <Setter Property="BorderThickness" Value="0" />
            </Style>

            <!--  Image resource (uses Assets/star.svg)  -->
            <BitmapImage x:Key="StarImage" UriSource="/Assets/star.svg" />

            <!--  Simple string resource  -->
            <x:String x:Key="PageTitle">ResourceDictionary demo</x:String>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Padding="20" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock
                Margin="0,0,0,6"
                FontSize="20"
                FontWeight="Bold"
                Foreground="{StaticResource AccentBrush}"
                Text="{StaticResource PageTitle}" />

            <StackPanel Orientation="Horizontal">
                <!--  Card 1  -->
                <Border Width="320" Style="{StaticResource CardBorderStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="40"
                            Height="40"
                            Margin="0,0,8,0"
                            Source="{StaticResource StarImage}" />
                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Text="Card title" />
                            <TextBlock
                                Width="240"
                                Foreground="{StaticResource MutedTextBrush}"
                                Text="This card uses shared brushes, padding and corner radius from the ResourceDictionary."
                                TextWrapping="Wrap" />
                            <Button
                                Margin="0,8,0,0"
                                HorizontalAlignment="Left"
                                Content="Primary"
                                Style="{StaticResource PrimaryButtonStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Card 2  -->
                <Border
                    Width="320"
                    Margin="12,0,0,0"
                    Style="{StaticResource CardBorderStyle}">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold" Text="Another card" />
                        <TextBlock
                            Foreground="{StaticResource MutedTextBrush}"
                            Text="Reuses the same resources so styles are consistent and easy to update."
                            TextWrapping="Wrap" />
                        <Button
                            Margin="0,8,0,0"
                            Content="Action"
                            Style="{StaticResource PrimaryButtonStyle}" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
