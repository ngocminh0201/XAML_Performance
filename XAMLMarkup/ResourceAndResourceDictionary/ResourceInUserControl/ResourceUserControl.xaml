<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Test3.XAMLMarkup.ResourceInUserControl.ResourceUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resourceinusercontrol="using:Test3.XAMLMarkup.ResourceAndResourceDictionary.ResourceInUserControl"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <resourceinusercontrol:MyHeavyDictionary />
            </ResourceDictionary.MergedDictionaries>
            <!--  Brushes  -->
            <SolidColorBrush x:Key="UCBackgroundBrush" Color="#FFF6F8FF" />
            <SolidColorBrush x:Key="UCBorderBrush" Color="#FF3F42CC" />
            <SolidColorBrush x:Key="UCAccentBrush" Color="#FF0078D7" />
            <!--  Style  -->
            <Style x:Key="UCButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource UCAccentBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Padding" Value="6,4" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="CornerRadius" Value="4" />
            </Style>

            <!--  Image  -->
            <BitmapImage x:Key="UCStarImage" UriSource="/Assets/star.svg" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Border
        Margin="6"
        Padding="10"
        Background="{StaticResource UCBackgroundBrush}"
        BorderBrush="{StaticResource UCBorderBrush}"
        BorderThickness="1"
        CornerRadius="8">
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Image
                    Width="32"
                    Height="32"
                    Source="{StaticResource UCStarImage}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="Item" />
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{StaticResource UCBorderBrush}"
                    Text="#" />
                <TextBlock VerticalAlignment="Center" Text="{x:Bind Number, Mode=OneWay}" />
                <Button Content="Action" Style="{StaticResource UCButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>