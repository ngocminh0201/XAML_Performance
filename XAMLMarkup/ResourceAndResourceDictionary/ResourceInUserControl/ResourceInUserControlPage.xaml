<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Test3.XAMLMarkup.ResourceInUserControl.ResourceInUserControlPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test3.XAMLMarkup.ResourceInUserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="12" Orientation="Vertical">
            <TextBlock
                FontFamily="Segoe UI"
                FontSize="60"
                FontWeight="Bold"
                Text="Đã có 1000 ResourceDictionaries tương ứng với 1000 UserControl đã được tạo ra, bộ nhớ và thời gian load tăng nhiều lắm đó!!!!"
                TextWrapping="WrapWholeWords" />
            <MediaPlayerElement
                x:Name="Player"
                Width="100"
                Height="100"
                AreTransportControlsEnabled="False"
                AutoPlay="True" />
            <ListView
                x:Name="ItemsList"
                IsItemClickEnabled="False"
                ItemsSource="{x:Bind Items}">
                <ListView.ItemTemplate>
                    <DataTemplate xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:DataType="x:Int32">
                        <local:ResourceUserControl Number="{x:Bind}" />
                    </DataTemplate>

                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>

</Page>