<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Test3.XAMLMarkup.ResourceAndResourceDictionary.xKeyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test3.XAMLMarkup.ResourceAndResourceDictionary"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <!--  Brushes  -->
            <SolidColorBrush x:Key="AccentBrush2" Color="#FF3F42CC" />
            <SolidColorBrush x:Key="CardBackgroundBrush2" Color="#FFF6F8FF" />
            <SolidColorBrush x:Key="MutedTextBrush2" Color="#FF666666" />

            <!--  Layout  -->
            <Thickness x:Key="CardPadding2">12</Thickness>
            <CornerRadius x:Key="CardCornerRadius2">8</CornerRadius>

            <!--  Styles  -->
            <Style x:Key="CardBorderStyle2" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
                <Setter Property="Padding" Value="{StaticResource CardPadding}" />
                <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}" />
                <Setter Property="Margin" Value="8" />
            </Style>

            <Style x:Key="PrimaryButtonStyle2" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Padding" Value="10,6" />
                <Setter Property="BorderThickness" Value="0" />
            </Style>

            <!--  Image resource (uses Assets/star.svg)  -->
            <BitmapImage x:Key="StarImage2" UriSource="/Assets/star.svg" />

            <!--  Simple string resource  -->
            <x:String x:Key="PageTitle2">ResourceDictionary demo</x:String>
        </ResourceDictionary>
    </Page.Resources>
    <StackPanel
        Padding="20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical">
        <TextBlock
            FontFamily="Segoe UI"
            FontSize="60"
            FontWeight="Bold"
            Text="Chưa có bất kỳ Resource nào được load cả, vì đã có ai gọi đâuuuuu "
            TextWrapping="WrapWholeWords" />
        <MediaPlayerElement
            x:Name="Player"
            Width="100"
            Height="100"
            AreTransportControlsEnabled="False"
            AutoPlay="True" />

    </StackPanel>
</Page>
