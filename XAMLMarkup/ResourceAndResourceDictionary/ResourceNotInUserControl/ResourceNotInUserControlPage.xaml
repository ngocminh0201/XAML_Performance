<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Test3.XAMLMarkup.ResourceAndResourceDictionary.ResourceNotInUserControl.ResourceNotInUserControlPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test3.XAMLMarkup.ResourceAndResourceDictionary.ResourceNotInUserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="12" Orientation="Vertical">
            <TextBlock
                FontFamily="Segoe UI"
                FontSize="60"
                FontWeight="Bold"
                Text="Có duy nhất 1 ResourceDictionary được tạo ra mặc dù có tới 1000 UserControl, bộ nhớ và thời gian load siu tối ưu đó!!!!"
                TextWrapping="WrapWholeWords" />
            <MediaPlayerElement
                x:Name="Player"
                Width="100"
                Height="100"
                AreTransportControlsEnabled="False"
                AutoPlay="True" />
            <ListView
                x:Name="ItemsList"
                IsItemClickEnabled="False"
                ItemsSource="{x:Bind Items}">
                <ListView.ItemTemplate>
                    <!--
                        Use a lightweight data type so the ListView creates one UserControl per item
                        and we don't keep extra control instances in the collection.
                    -->
                    <DataTemplate xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:DataType="x:Int32">
                        <local:ResourceNotInUserControl Number="{x:Bind}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>
</Page>
