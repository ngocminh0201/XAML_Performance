<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Test3.XAMLMarkup.ResourceAndResourceDictionary.ResourceNotInUserControl.ResourceNotInUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test3.XAMLMarkup.ResourceAndResourceDictionary.ResourceNotInUserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        Margin="6"
        Padding="10"
        Background="{StaticResource UCBackgroundBrushApp}"
        BorderBrush="{StaticResource UCBorderBrushApp}"
        BorderThickness="1"
        CornerRadius="8">
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Image
                    Width="32"
                    Height="32"
                    Source="{StaticResource UCStarImageApp}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="Item" />
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{StaticResource UCBorderBrushApp}"
                    Text="#" />
                <TextBlock VerticalAlignment="Center" Text="{x:Bind Number, Mode=OneWay}" />
                <Button Content="Action" Style="{StaticResource UCButtonStyleApp}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
