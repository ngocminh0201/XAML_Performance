<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Test3.XAMLMarkup.ResourceAndResourceDictionary.xNamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test3.XAMLMarkup.ResourceAndResourceDictionary"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Media"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <!--  Brushes  -->
            <SolidColorBrush x:Name="AccentBrush" Color="#FF3F42CC" />
            <SolidColorBrush x:Name="CardBackgroundBrush" Color="#FFF6F8FF" />
            <SolidColorBrush x:Name="MutedTextBrush" Color="#FF666666" />

            <!--  Styles  -->
            <Style x:Name="CardBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
                <Setter Property="Padding" Value="15,5" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="Margin" Value="8" />
            </Style>

            <Style x:Name="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Padding" Value="10,6" />
                <Setter Property="BorderThickness" Value="0" />
            </Style>

            <BitmapImage x:Name="StarImage" UriSource="/Assets/star.svg" />

        </ResourceDictionary>
    </Page.Resources>

    <StackPanel
        Padding="20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical">
        <TextBlock
            FontFamily="Segoe UI"
            FontSize="60"
            FontWeight="Bold"
            Text="Toàn bộ Resource bị load hết mất rồi "
            TextWrapping="WrapWholeWords" />
        <MediaPlayerElement
            x:Name="Player"
            Width="100"
            Height="100"
            AreTransportControlsEnabled="False"
            AutoPlay="True" />

    </StackPanel>
</Page>
