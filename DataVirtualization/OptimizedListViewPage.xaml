<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Test3.DataVirtualization.OptimizedListViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Test3.DataVirtualization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="TextBrush" Color="#FF3F42CC" />
            <local:ImageLoaderConverter x:Key="ImageLoader" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView
            x:Name="ProductList"
            Margin="0,8,0,0"
            ItemsSource="{x:Bind DataSource, Mode=OneWay}">
            <!--  BẬT ẢO HÓA + RECYCLING  -->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <!--  Container gọn, chiều cao tối thiểu để giảm đo/arrange  -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="MinHeight" Value="44" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>

            <!--  TEMPLATE: giữ NGUYÊN THIẾT KẾ như Heavy page (ảnh trái 120x120, text phải)  -->
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Product">

                    <Border
                        Margin="4"
                        Padding="8"
                        BorderBrush="{StaticResource TextBrush}"
                        BorderThickness="1">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Image on the left (rows 0-1)  -->
                            <Image
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="0"
                                Width="120"
                                Height="120"
                                Margin="8"
                                Source="{Binding ImagePath, Converter={StaticResource ImageLoader}, ConverterParameter=120}" />

                            <StackPanel
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Margin="12,0">
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Text="{x:Bind Name}" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="SemiBold" Text="Price: " />
                                    <TextBlock Foreground="Green" Text="{x:Bind Price, Mode=OneWay}" />
                                </StackPanel>
                                <TextBlock
                                    Width="360"
                                    Text="{x:Bind Description}"
                                    TextWrapping="Wrap" />
                            </StackPanel>

                            <Border
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Margin="0,8,0,0"
                                Padding="6"
                                Background="#E6F2FF">
                                <TextBlock HorizontalAlignment="Center" Text="Extra footer (lightweight)" />
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
